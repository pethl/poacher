<div id="<%= dom_id butter_make %>">
          
          <% if Date.today == butter_make.date %>
            <tr class="border-b  bg-green-100 hover:bg-gray-100 text-right">
            <% else %>
            <tr class="border-b hover:bg-gray-100 text-right"> 
          <% end %>
                <td scope="row" class="px-4 py-2  whitespace-nowrap">
                   <%= butter_make.date.to_formatted_s(:short_day) %>
                </td>
                <td class="px-4 py-2 underline underline-offset-2">
                  <%=  link_to butter_make.date.to_formatted_s(:uk_clean_date), [:edit, butter_make] %>
                </td>

                  <td class="px-4 py-2 ">
                 <%= butter_make.cream %>
                  </td>
              
                <td class="px-4 py-2 ">
                  <%=  butter_make.make %>
                </td>
                <td class="px-4 py-2 ">
                  <%=  butter_make.stock %>
                </td>
                <td class="px-4 py-2 font-bold">
                  <%=  butter_make.stock_calc %>
                </td>
            </tr>
</div>