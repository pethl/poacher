<div class="overscroll-none">
<% content_for :title, "Poacher: Butter Make" %>
<% content_for(:page_title, "BUTTER MAKE SCHEDULE")%>
<div id="butter_makes">

<div class="items-center rounded text-sm">
<%= turbo_refreshes_with method: :morph, scroll: :preserve %>

<a class="bg-transparent text-sm hover:bg-gray-600 font-semibold hover:text-white mt-8 my-4 py-2 px-4 border border-gray-900 hover:border-transparent rounded-lg" href="/butter_makes/create_month">Add a Month</a>

<div class="mx-auto relative w-full md:w-2/3 sticky top-0 font-normal text-left text-sm m-2">
<i class="fa-solid fa-circle-info"></i> Click any underlined column header to sort table
</div>

<div class="flex flex-col h-screen">
    <div class="flex-grow overflow-auto">
      <table class="mx-auto table-fixed relative w-2/3 border text-sm text-center text-gray-500  ">
       <thead class="text-xs text-gray-700 uppercase bg-gray-200 ">
        <tr class="bg-gray-200 sticky top-0 text-right">
                <th scope="col" class="sticky top-0 px-4 py-2 ">
                  Day
                </th>
                <th scope="col" class="sticky top-0 px-4 py-2 pr-2 whitespace-nowrap underline underline-offset-2">
                  Date
                </th>
                <th id="batch" class="sticky top-0 px-4 py-2">
                  Cream
                </th>
                <th scope="col" class="sticky top-0 px-4 py-2">
                  Make
                </th>
                <th scope="col" class="sticky top-0 px-4 py-2">
                  Stock<br>Confirmed
                </th>
                 <th scope="col" class="sticky top-0 px-4 py-2">
                  Stock<br>Projected
                </th>
            </tr>
        </thead>
        <tbody class="overflow-contain">
         
          <%= turbo_frame_tag "second_frame" do %>
           <%= render @butter_makes %>
           <% end %>
        </tbody>
    </table>
</div>





