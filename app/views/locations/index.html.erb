<% content_for :title, "Poacher: Location Data" %>
<% content_for :page_title, "LOCATION DATA" %>
<% content_for :page_button, "locations/new" %>
<div data-controller="filter" class="w-full flex flex-col items-center space-y-4">

 <div class="flex items-center gap-4 mb-4">
  <!-- Filter Input -->
  <input
    type="text"
    placeholder="Filter locations..."
    class="<%= field_class_flex %>"
    data-filter-target="input"
    data-action="input->filter#filter"
  />

  <%= link_to "Print Labels", print_wizard_locations_path, class: fill_button_class %>
</div>

  <!-- Table -->
  <table class="w-full md:w-4/5 lg:w-2/3 table-auto border text-sm text-left text-gray-600">
    <thead class="text-xs text-gray-700 uppercase bg-gray-200 sticky top-0">
      <tr>
        <th class="px-4 py-2 underline underline-offset-2">Name</th>
        <th class="px-4 py-2 underline underline-offset-2">Location Type</th>
         <th class="px-4 py-2 underline underline-offset-2">Sort Order</th>
        <th class="px-4 py-2 underline underline-offset-2">Created At</th>
        <th class="px-4 py-2 underline underline-offset-2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @locations.each do |location| %>
        <tr class="border-b hover:bg-gray-100" data-filter-target="row">
          <td class="px-4 py-3 whitespace-nowrap"><%= location.name %></td>
          <td class="px-4 py-3 whitespace-nowrap"><%= location.location_type %></td>
          <td class="px-4 py-3 whitespace-nowrap"><%= location.sort_order %></td>
          <td class="px-4 py-3 whitespace-nowrap"><%= location.created_at.to_formatted_s(:uk_clean_date) %></td>
          <td class="px-4 py-3">
            <%= link_to "Show", location, class: "rounded-lg py-1 px-3 bg-gray-100 font-medium text-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
