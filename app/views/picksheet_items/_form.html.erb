<hr>
<br>
  <%= form_for [picksheet, picksheet_item], html: { class: "form line-item-date" } do |form| %>
  
  <% if picksheet_item.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(picksheet_item.errors.count, "error") %> prohibited this picksheet_item from being saved:</h2>

      <ul>
        <% picksheet_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="flex flex-row gap-2">
  <div>
    <%= form.label :product, class:"font-semibold text-sm pl-4" %><br>
    <%=  form.select :product, options_for_select(grade),{:prompt=>true}, class: " text-green-800 rounded-lg" %>
   </div>
   <div>
     <%= form.label :size, class:"font-semibold text-sm pl-4" %><br>
     <%=  form.select :size, options_for_select(sale_size),{:prompt=>true}, class: " text-green-800 rounded-lg" %>
   </div>
   <div>
     <%= form.label :count, class:"font-semibold text-sm pl-4" %><br>
      <%= form.number_field :count, class: "text-green-800 rounded-lg w-16" %>
   </div>
   <div>
     <%= form.label :weight, class:"font-semibold  text-sm pl-4" %><br>
      <%= form.text_field :weight, class: "text-green-800 rounded-lg w-32" %>
   </div>
   <div>
     <%= form.label :code, class:"font-semibold  text-sm pl-4" %><br>
      <%= form.text_field :code, class: "text-green-800 rounded-lg w-32" %>
   </div>
   <div>
     <%= form.label :sp_price, class:"font-semibold text-sm pl-4" %><br>
      <%= form.number_field :sp_price, class: "text-green-800 rounded-lg w-16" %>
   </div>
   <div>
     <%= form.label :bb_date,"B/b Date:", class:"font-semibold text-sm pl-4" %><br>
      <%= form.date_field :bb_date, class: "text-green-800 rounded-lg w-32" %>
   </div>
      </div>
      
   <div class="inline">
     <%= form.submit "Save Line Item", class: tight_fill_button_class %>
      <%= link_to "Cancel", picksheet_path(picksheet), class: tight_clear_button_class %>
   </div>
<% end %>
