<%= render 'shared/store_nav' %>
<% content_for :title, "Poacher: Storage Inspection Report" %>
<% content_for(:page_title, "STORAGE INSPECTION") %>

<div class="max-w-4xl mx-auto px-4"> 

  <!-- 🔍 Selection Form -->
  <div class="bg-white rounded-xl shadow p-4 mb-6 border">
    <%= form_with url: location_inspection_path, method: :get, local: true do %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

        <!-- Shed Radios -->
        <fieldset>
          <legend class="text-gray-700 font-semibold mb-1">Select Shed</legend>
          <div class="flex gap-4">
            <% ["Shed 4", "Shed 5"].each do |shed_option| %>
              <label class="inline-flex items-center">
                <%= radio_button_tag :shed, shed_option, shed_option == @shed, class: "#{radio_input_class} mr-2" %>
                <%= shed_option %>
              </label>
            <% end %>
          </div>
        </fieldset>

        <!-- Aisle Radios -->
        <fieldset>
          <legend class="text-gray-700 font-semibold mb-1">Select Aisle</legend>
          <div class="grid grid-cols-3 gap-2">
            <% (1..6).each do |a| %>
              <label class="inline-flex items-center">
                <%= radio_button_tag :aisle, a, a == @aisle, class: "#{radio_input_class} mr-2" %>
                Aisle <%= a %>
              </label>
            <% end %>
          </div>
        </fieldset>
      </div>

      <div class="text-right mt-4">
        <%= submit_tag "Inspect Aisle", class: fill_button_class %>
      </div>
    <% end %>
  </div>

  <!-- 🧀 Aisle Report -->
  <h2 class="text-xl font-bold mb-4 text-center">
    <%= @shed %> – Aisle <%= @aisle %>
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <% %w[Left Right].each do |side| %>
      <% side_locs = @locations.select { |loc| loc.side == side } %>
      <% next if side_locs.empty? %>

      <div>
        <h3 class="text-lg font-semibold mb-2"><%= side %> side</h3>
        <ul class="space-y-1">
          <% side_locs.each do |loc| %>
            <% ms = loc.makesheet %>
            <li class="bg-white border rounded px-3 py-2 flex justify-between items-center shadow-sm
              <%= ms&.slow_cheese ? 'border-red-500 ring-2 ring-red-400' : 'border-gray-200' %>">
              <span><%= loc.name[/Col \d+/] || loc.name %></span>
              <span class="text-lg text-gray-600 font-semibold flex flex-col items-end">
                <% if ms.present? %>
                  <% grade = ms.grade.presence %>
                  <% date  = ms.make_date.strftime('%d-%m-%Y') %>
                  <% slow  = ms.slow_cheese ? "<span class='text-red-600 font-bold'>SLOW</span> – " : "" %>
                  <%= raw("#{slow}#{grade + ' – ' if grade}") %>
                  <%= link_to date, edit_makesheet_path(ms), class: link_class %>    

                  <div class="mt-1 flex gap-2">
                    <%= link_to "Assign",
                                new_location_assignment_path(location_id: loc.id, makesheet_id: nil),
                                class: "text-xs bg-gray-800 text-white px-2 py-1 rounded" %>

                   <%= button_to "Clear",
                      clear_location_assignment_location_path(loc),
                      method: :post,
                      data: { turbo: false, confirm: "Are you sure you want to clear this location?" },
                      class: "text-xs bg-green-500 text-white px-2 py-1 rounded" %>

                  </div>
                <% else %>
                  <span class="text-red-500 italic">empty</span>
                <% end %>
              </span>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
<br><br>
<br><br>
