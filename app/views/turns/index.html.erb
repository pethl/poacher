<% content_for(:page_title, "STORE : TURNS")%>
 <% content_for(:page_button, "turns/new")%>
<div class="mx-auto md:w-2/3 w-full flex justify-center">

<div id="turns">
  <br>
 
  <div class="flex flex-col h-screen">
      <div class="flex-grow overflow-auto">
        <table class="relative w-full border text-sm text-left text-gray-500  ">
         <thead class="text-xs text-gray-700 uppercase bg-gray-200 ">
        <tr class="bg-gray-200 sticky top-0">
                <th scope="col" class="sticky top-0 px-6 py-3">
                    Turn Date
                </th>
                <th scope="col" class="sticky top-0 px-6 py-3">
                    Turned By
                </th>
                <th scope="col" class="sticky top-0 px-6 py-3">
                    Batch
                </th>
               
            </tr>
        </thead>
        <tbody>
         <% @turns.each do |turn| %>
            <tr class="bg-white border-b hover:bg-gray-100">
                <td class="px-6 py-4 whitespace-nowrap underline underline-offset-2">
                   <%= link_to turn.turn_date.to_date, turn %>
                </td>
                <td class="px-6 py-4">
                  <%= turn.turned_by %>
                </td>
                <td class="px-6 py-4 underline underline-offset-2">
                  <%=  link_to turn.makesheet.batch_and_grade, batch_turns_makesheet_path(turn.makesheet) %>
                </td>
                
            </tr>
           
              <% end %>
        </tbody>
    </table>
</div>
</div>





