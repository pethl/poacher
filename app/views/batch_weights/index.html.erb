<div class="overscroll-none">
<% content_for :title, "Poacher: Cheese Batch Weights" %>
<% content_for(:page_title, "CHEESE BATCH WEIGHTS")%>
<% content_for(:print_button, "browser-print")%>
<% content_for(:page_button, "batch_weights/new")%>
<br>

<div class="flex flex-col h-screen pr-2">
    <div class="flex-grow overscroll-none">
      <table class="mx-auto table-fixed relative w-full 2xllg:w-2/3 border text-sm text-center text-gray-500  ">
       <thead class="text-xs text-gray-700  bg-gray-200 ">
       
        <tr class="bg-gray-200 sticky top-0 border border-gray-400">
              <th scope="col" class="sticky top-0 px-4 py-2 border border-gray-400 text-center">
                Date
              </th>
              <th scope="col" class="sticky top-0 px-4 py-2 pr-2 border border-gray-400 text-center">
                Production Date/Batch
              </th>
              <th id="col" class="sticky top-0 px-4 py-2 border border-gray-400 text-center">
                Number in Batch
              </th>
              <th scope="col" class="sticky top-0 px-4 py-2 border border-gray-400 text-center">
                Washed Batch Weight
              </th>
             
              <th scope="col" class="sticky top-0 px-4 py-2 border border-gray-400 text-center">
                Recorded Weight at Make
              </th>
                <th id="col" class="sticky top-0 px-4 py-2 border border-gray-400 text-center">
                Grade
              </th>
              <th scope="col" class="sticky top-0 px-4 py-2 border border-gray-400 text-center">
                All rinds visually clean from mould/debris (*)
              </th>
              <th scope="col" class="sticky top-0 px-4 py-2 border border-gray-400 text-center">
                Comments
              </th>
                
            </tr>
            
        </thead>
        <tbody class="overflow-contain">
         
           <%= render @batch_weights %>
        </tbody>
    </table>
</div> 
<br><br>
