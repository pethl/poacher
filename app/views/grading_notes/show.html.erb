<% content_for(:page_title, "GRADING NOTES - #{@grading_note.makesheet.make_date_formatted}")%>

<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">

    <%= render @grading_note %>

    <%= link_to "Edit this grading note", edit_grading_note_path(@grading_note), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to grading notes", grading_notes_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this grading note", @grading_note, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>