<div class="max-w-xl mx-auto mt-6 bg-white p-4 rounded shadow">
  <h2 class="text-xl font-semibold mb-4">Start Grading Session</h2>

  <%= form_with url: create_preload_grading_notes_path, method: :post, local: true do |form| %>
    <div class="grid grid-cols-2 gap-x-5 gap-y-4 items-center">

      <label class="text-right font-semibold text-gray-700">
        <%= form.label :start_date, "Start from Make Date" %>
      </label>
      <div>
        <%= form.date_field :start_from_make_date, value: @earliest_ungraded_makesheet&.make_date || Date.today, class: field_class_flex %>
      </div>

      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-1">How many batches would you like to preload?</label>
        <%= form.select :batch_count, options_for_select([3,4,5], selected: 5), {}, class: field_class_flex_med %>
      </div>

      <label class="text-right font-semibold text-gray-700">
        <%= form.label :head_taster_id, "Head Taster" %>
      </label>
      <div>
        <%= form.collection_select :head_taster_id, @staffs, :id, :full_name, { prompt: "Select Head Taster" }, class: field_class_flex %>
      </div>

      <label class="text-right font-semibold text-gray-700">
        <%= form.label :assistant_taster_1_id, "Assistant Taster 1" %>
      </label>
      <div>
        <%= form.collection_select :assistant_taster_1_id, @staffs, :id, :full_name, { prompt: "Select Assistant 1" }, class: field_class_flex %>
      </div>

      <label class="text-right font-semibold text-gray-700">
        <%= form.label :assistant_taster_2_id, "Assistant Taster 2" %>
      </label>
      <div>
        <%= form.collection_select :assistant_taster_2_id, @staffs, :id, :full_name, { prompt: "Select Assistant 2" }, class: field_class_flex %>
      </div>

      <div class="col-span-2 text-right mt-4">
        <%= link_to "â† Back to Store Home", pages_store_home_path, class: gray_button %>
        <%= form.submit "Preload Grading Notes", class: fill_button_class %>
      </div>

    </div>
  <% end %>
</div>
