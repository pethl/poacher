<div class="max-w-xl mx-auto mt-4 bg-white p-4">
  <%= form_with(model: butter_stock, local: true) do |form| %>

    <%= form_errors_for(butter_stock) %>

    <div class="grid grid-cols-2 gap-x-5 gap-y-3 items-center">

      <!-- Make Date -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :make_date %>
      </label>
      <div class="text-left">
        <%= form.date_field :make_date, value: butter_stock.make_date || Date.today, class: field_class_flex %>
      </div>

      <!-- Today's Make -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :todays_make %>
      </label>
      <div class="text-left">
        <%= form.number_field :todays_make, class: field_class_flex %>
      </div>

      <!-- Fresh Spare for Sale -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :fresh_spare_for_sale %>
      </label>
      <div class="text-left">
        <%= form.number_field :fresh_spare_for_sale, class: field_class_flex %>
      </div>

      <!-- Market Returns Header -->
      <div class="col-span-2 text-left mt-3 font-bold text-sm text-gray-700">
        Market Returns
      </div>

      <label class="text-right font-semibold text-gray-700">
        <%= form.label :market_returns_salted, "Salted" %>
      </label>
      <div class="text-left">
        <%= form.number_field :market_returns_salted, class: field_class_flex %>
      </div>

      <label class="text-right font-semibold text-gray-700">
        <%= form.label :market_returns_hm2, "HM 2%" %>
      </label>
      <div class="text-left">
        <%= form.number_field :market_returns_hm2, class: field_class_flex %>
      </div>

      <label class="text-right font-semibold text-gray-700">
        <%= form.label :market_returns_unsalted, "Unsalted" %>
      </label>
      <div class="text-left">
        <%= form.number_field :market_returns_unsalted, class: field_class_flex %>
      </div>

      <!-- Freezer Stock Header -->
      <div class="col-span-2 text-left mt-3 font-bold text-sm text-gray-700">
        Freezer Stock
      </div>

      <label class="text-right font-semibold text-gray-700">
        <%= form.label :freezer_stock_salted, "Salted" %>
      </label>
      <div class="text-left">
        <%= form.number_field :freezer_stock_salted, class: field_class_flex %>
      </div>

      <label class="text-right font-semibold text-gray-700">
        <%= form.label :freezer_stock_hm2, "HM 2%" %>
      </label>
      <div class="text-left">
        <%= form.number_field :freezer_stock_hm2, class: field_class_flex %>
      </div>

      <label class="text-right font-semibold text-gray-700">
        <%= form.label :freezer_stock_unsalted, "Unsalted" %>
      </label>
      <div class="text-left">
        <%= form.number_field :freezer_stock_unsalted, class: field_class_flex %>
      </div>

      <!-- Family Butter Header -->
      <div class="col-span-2 text-left mt-3 font-bold text-sm text-gray-700">
        Family Butter
      </div>

      <label class="text-right font-semibold text-gray-700">
        <%= form.label :family_butter_salted, "Salted" %>
      </label>
      <div class="text-left">
        <%= form.number_field :family_butter_salted, class: field_class_flex %>
      </div>

      <label class="text-right font-semibold text-gray-700">
        <%= form.label :family_butter_hm2, "HM 2%" %>
      </label>
      <div class="text-left">
        <%= form.number_field :family_butter_hm2, class: field_class_flex %>
      </div>

      <label class="text-right font-semibold text-gray-700">
        <%= form.label :family_butter_unsalted, "Unsalted" %>
      </label>
      <div class="text-left">
        <%= form.number_field :family_butter_unsalted, class: field_class_flex %>
      </div>

      <!-- Back to Index (1st col, label side) -->
      <div class="text-left">
        <%= link_to "â† Back to Calculations", butter_stocks_path, class: gray_button %>
      </div>

      <!-- Submit Button (2nd col, input side) -->
      <div class="text-left">
        <%= form.submit "Save", class: fill_button_class %>
      </div>
    </div>
  <% end %>
</div>
