
 <div class="grid grid-cols-2 md:grid-cols-4  gap-x-6 gap-y-2">
    <div class="font-semibold mb-1 text-right self-center">
     Action date:
    </div>
   
    <div class="border border-green-800 rounded-lg text-left p-2 bg-gray-100">
      <%= wash.action_date.to_formatted_s(:uk_day) unless wash.action_date.to_s.empty?  %>
    </div>
  
    <div class="font-semibold mb-1 text-right self-center">
      Wash Status:
    </div>
   
    <div class="border border-green-800 rounded-lg text-left p-2 bg-gray-100">
      <%= wash.wash_status %>
    </div>
    
    <div class="font-semibold mb-1 text-right self-center">
      Created At:
    </div>
   
    <div class="border border-green-800 rounded-lg text-left p-2 bg-gray-100">
     <%= wash.created_at.to_formatted_s(:uk_day) unless wash.created_at.to_s.empty? %>
    </div>
   
    <div class="font-semibold mb-1 text-right self-center">
      Created By:
    </div>
    
    <div class="border border-green-800 rounded-lg text-left p-2 bg-gray-100">
    
    </div>
 </div>
