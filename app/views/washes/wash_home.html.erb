  <% content_for(:page_title, "WASH")%>

    <div class="flex flex-wrap w-full justify-center gap-6 lg:gap-20">
   
      <div class="">
        <p class="mt-10 text-lg font-strong mb-9">New Wash Sheet </p>
        <%= link_to "New Wash Sheet", new_wash_path, class: clear_button_class %>
      </div>
   
      <div class="">
        <p class="mt-10 text-lg font-strong mb-7">Edit Latest Wash Sheet<br> </p>
      
        <!-- Dropdown menu -->
        <div id="dropdown" class="z-10 hidden bg-white divide-y divide-gray-100 rounded shadow w-44 ">
            <ul class="py-2 text-sm text-gray-700 " aria-labelledby="dropdownDefaultButton">
              <li>
                
                <% unless @todays_wash.blank? %>
                  <%= link_to @todays_wash.action_date.to_formatted_s(:uk_day), edit_wash_path(@todays_wash), class: dropdown_list_class %>
                <% end %>
              </li>
             
            </ul>
        </div>
     
    <button id="dropdownDefaultButton" data-dropdown-toggle="dropdown" class="text-white font-semibold bg-green-800 hover:bg-green-600 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2 text-center inline-flex items-center " type="button">Select Wash Sheet <svg class="w-2.5 h-2.5 ms-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
    </svg>
    </button>
       </div>
  
    <div class="">
      <p class="mt-10 text-lg font-strong mb-8">Print Wash Sheet </p>
      <div class="relative max-w-sm">
        <div class="absolute mt-2 inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
        
        </div>
        <%= link_to "Print Today's Wash Sheet PDF", print_washsheet_pdf_path(:id => @todays_wash), class:clear_button_class %>
        </div>
    </div>
  
    <div class="">
      <p class="mt-10 text-lg font-strong mb-9">View All </p>
       <%= link_to "View All", washes_path, class: clear_button_class %>
    </div>
  
     </div>

    <% unless @wash_approved.blank? %>
      <div class="w-1/2 mx-auto text-sm mt-8 border border-green-800 rounded-lg p-4  bg-green-800">
        <%= render "washes/wash_approved", wash:  @wash_approved %>
      </div>
    <% end %>

    
   


 


