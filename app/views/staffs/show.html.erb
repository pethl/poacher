<div class="mx-auto md:w-1/3 w-full">
<% content_for(:page_title, "STAFF: #{@staff.full_name}")%>
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    
  <%= render @staff %>

    <%= link_to "Edit this staff", edit_staff_path(@staff), class: fill_button_class %>
    <%= link_to "Back to staffs", staffs_path, class:gray_button %>
    <div class="inline-block ml-2">
      <%= button_to "Delete this Staff Record",
                  @staff,
                  method: :delete,
                  form: { data: { turbo_confirm: "Are you sure?" } },
                  class: gray_button %>
    </div> 
  </div>

