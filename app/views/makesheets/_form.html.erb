<div class="mx-auto text-right">
  <%= form_with(model: makesheet, data: { controller: "makesheet", makesheet_make_type_value: @makesheet.make_type }) do |form| %>


  <%= form_errors_for(makesheet) %>

  <!-- Summary Navigation (Sticky) -->
  <div class="col-span-4 text-left font-light pb-2 mb-4 bg-white py-1 px-4 sticky top-[77px] z-50">
    <span class="font-semibold">Jump to:</span>
    <a href="#summary-section" class="text-lime-800 underline ml-2">Summary</a>
    <a href="#ingredients-section" class="text-lime-800 underline ml-2">Ingredients</a>
    <a href="#make-recipe-section" class="text-lime-800 underline ml-2">Make Recipe</a>
     <a href="#process-info-section" class="text-lime-800 underline ml-2">Process Info</a>
    <a href="#post-make-section" class="text-lime-800 underline ml-2">Post Make</a>
    <a href="#graph-section" class="text-lime-800 underline ml-2">Graph</a>
    <a href="#slow-cheese-section" class="text-lime-800 underline ml-2">Slow Cheese</a>
    <a href="#maintenance-section" class="text-lime-800 underline ml-2">Maintenance</a>
  </div>

  <!-- Main Grid Container -->

    <div  class="grid grid-cols-4 gap-2 mt-8">

  <!-- SUMMARY Section -->
    <div class="col-span-4">
      <hr>
    </div>
    <div id="summary-section" class="scroll-mt-[120px] col-span-4 text-left font-semibold text-lg">
      SUMMARY
    </div>
    <div class="col-span-4">
      <hr>
    </div>
   

      <!-- Status -->
      <div class="col-span-2 self-center">
        <%= form.label :status, class: label_class %>
      </div>
      <div class="col-span-2 md:col-span-1 text-left">
        <%= form.select :status, options_for_select(batch_status, selected: makesheet.status), { prompt: true }, disabled: true, class: makesheet_med_class %>
      </div>

      <!-- Make Type -->
      <div class="col-span-2 self-center">
        <%= form.label :make_type, class: label_class %>
      </div>
      <div class="col-span-2 md:col-span-1 text-left">
        <%= form.select :make_type, options_for_select(make_type, selected: makesheet.make_type), { prompt: true }, class: makesheet_med_class %>
      </div>

      <!-- Weight Type -->
      <div class="col-span-2 self-center">
        <%= form.label :weight_type, class: label_class %>
      </div>
      <div class="col-span-2 md:col-span-1  text-left">
        <%= form.select :weight_type, options_for_select(weight_type, selected: makesheet.weight_type), { prompt: true }, class: makesheet_med_class %>
      </div>

      <!-- Make Date -->
      <div class="col-span-2 self-center">
        <%= form.label :make_date, class: label_class %>
      </div>
      <div class="col-span-2 md:col-span-1 text-left">
        <%= form.date_field :make_date, value: @makesheet.make_date, class: makesheet_med_class %>
      </div>

      <!-- Cheese Made By -->
      <div class="col-span-2 self-center">
        <%= form.label :cheese_made_by_staff_id, class: label_class %>
      </div>
      <div class="col-span-2 md:col-span-1 text-left">
        <%= form.collection_select(:cheese_made_by_staff_id, @cheese_makers, :id, :full_name, { prompt: true }, class: makesheet_med_class) %>
      </div>

      <!-- Assistant -->
      <div class="col-span-2 self-center">
        <%= form.label :assistant_staff_id, class: label_class %>
      </div>
      <div class="col-span-2 md:col-span-1 text-left">
        <%= form.collection_select(:assistant_staff_id, @cheese_makers, :id, :full_name, { prompt: true }, class: makesheet_med_class) %>
      </div>

      <!-- Milling Help -->
      <div class="col-span-2 self-center">
        <%= form.label :milling_help, class: label_class %>
      </div>
      <div class="col-span-2 md:col-span-1 text-left">
        <%= form.text_field :milling_help, class: makesheet_med_class %>
      </div>

     <% if @makesheet.make_date < 6.months.ago.to_date %>
          <!-- Grade -->
          <div class="col-span-2 self-center">
            <%= form.label :grade, class: label_class %>
          </div>
          <div class="col-span-2 md:col-span-1 text-left">
            <%= form.select :grade, grade, { include_blank: "Please select" }, class: makesheet_med_class %>
          </div>
        <% end %>


     <!-- INGREDIENTS Section ****************************************************************** -->
  
      <div class="col-span-4 mt-8">
        <hr>
      </div>
      <div id="ingredients-section" class="scroll-mt-[120px] col-span-4 text-left font-semibold text-lg">
        INGREDIENTS: MILK & ADDITIONS
      </div>
      <div class="col-span-4">
        <hr>
      </div>
     

     <!-- Starter Culture -->
        <div class="col-span-1 text-left font-light">STARTER CULTURE</div>
        <div class="col-span-1 self-center">
          <%= form.label :type_of_starter_culture_used, "Type", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 text-left">
          <%= form.select :type_of_starter_culture_used, options_for_select(starter_culture, selected: makesheet.type_of_starter_culture_used), { prompt: true }, class: makesheet_med_class %>
        </div>

        <div class="col-span-2 self-center">
          <%= form.label :qty_of_starter_used, "Quantity", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 text-left">
          <%= form.number_field :qty_of_starter_used, step: :any, placeholder: "grams", class: makesheet_small_right_class %>
        </div>

        <% if makesheet.make_type == "Red" %>
          <div class="col-span-2 self-center"><%= form.label :md_88_qty_used, "MD88 Qty Used", class: label_class %></div>
          <div class="col-span-2 md:col-span-1  text-left"><%= form.text_field :md_88_qty_used, class: makesheet_small_left_class %></div>
        <% end %>

        <!-- Milk -->
        <div class="col-span-4"><hr></div>
        <div class="col-span-1 text-left font-light">MILK</div>
        <div class="col-span-1 self-center">
          <%= form.label :milk_used, "Milk (ltrs)", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 text-left">
          <%= form.number_field :milk_used, placeholder: "litres", class: makesheet_small_right_class, step: :any,
              data: { action: "input->makesheet#updateSaltWeights", makesheet_target: "milkUsed" } %>
        </div>
        <div class="col-span-2 self-center">
          <%= form.label :warm_am, class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 text-left">
          <%= form.select :warm_am, options_for_select(yes_no, selected: makesheet.warm_am.presence || "Yes"), {}, class: makesheet_small_left_class %>
        </div>
        <div class="col-span-2 self-center">
          <%= form.label :twelve_hr_pm, "12 Hour PM", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 text-left">
          <%= form.select :twelve_hr_pm, options_for_select(yes_no, selected: makesheet.twelve_hr_pm || "Yes"), {}, class: makesheet_small_left_class %>
        </div>

        <!-- Milk From FM -->
        <div class="col-span-4"><hr></div>
        <div class="col-span-1 text-left font-light">MILK FROM FARMERS MARKETS</div>
        <div class="col-span-1 self-center">
          <%= form.label :number_of_bottles_from_fm, "Number of Bottles", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 text-left">
          <%= form.number_field :number_of_bottles_from_fm, class: makesheet_small_right_class %>
        </div>
        <div class="col-span-2 self-center">
          <%= form.label :use_by_date_milk_from_fm, "Use By Date", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 text-left">
          <%= form.date_field :use_by_date_milk_from_fm, class: makesheet_full_class %>
        </div>

        <!-- Salt -->
        <div class="col-span-4"><hr></div>
        <div class="col-span-1 text-left font-light">SALT <span class="text-sm">(Gross assumes 1.6kg bucket)</span></div>
       <!-- Expected Yield -->
        <div class="col-span-1 self-center">
          <%= form.label :expected_yield, class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 text-left">
          <%= form.number_field :expected_yield,
                step: 0.01,
                class: makesheet_small_right_class,
                data: {
                  makesheet_target: "expectedYield",
                  action: "input->makesheet#updateSaltWeights"
                } %>
        </div>
       
        <div class="col-span-2 self-center">
          <%= form.label :salt_weight_net, class: label_class %>
        </div>
       <!-- Salt Net -->
        <div class="col-span-2 md:col-span-1 text-left">
          <%= form.number_field :salt_weight_net,
                step: :any,
                class: makesheet_small_right_class,
                data: {
                  makesheet_target: "saltNet"
                } %>
        </div>
        <div class="col-span-2 self-center">
          <%= form.label :salt_weight_gross, class: label_class %>
        </div>
        <!-- Salt Gross -->
          <div class="col-span-2 md:col-span-1 text-left">
            <%= form.number_field :salt_weight_gross,
                  step: :any,
                  class: makesheet_small_right_class,
                  data: {
                    makesheet_target: "saltGross"
                  } %>
          </div>

    

    <!-- MAKE RECIPE Section -->
      <div class="col-span-4 mt-8"><hr></div>
      <div id="make-recipe-section" class="scroll-mt-[120px] col-span-4 text-left font-semibold text-lg">
        MAKE RECIPE
      </div>
      <div class="col-span-4"><hr></div>
     

      <!-- Make Recipe Fields -->
      <div class="col-span-2 self-center">
        <%= form.label :steam_hot_water_on_time, "Steam / Hot Water On", class: label_class %>
      </div>
      <div class="col-span-2 md:col-span-1 text-left">
        <%= form.time_field :steam_hot_water_on_time, class: makesheet_small_right_class %>
      </div>

      <div class="col-span-2 self-center">
        <%= form.label :cold_milk_in_time, "Cold Milk In", class: label_class %>
      </div>
      <div class="col-span-2 md:col-span-1 flex items-center space-x-2">
        <%= form.time_field :cold_milk_in_time, class: makesheet_small_right_class %>
        <%= form.text_field :cold_milk_in_state, placeholder: "OK?", class: makesheet_small_left_class %>
      </div>

      <div class="col-span-2 self-center">
        <%= form.label :warm_milk_finish_time, "Warm Milk Finish", class: label_class %>
      </div>
      <div class="col-span-2 md:col-span-1 flex items-center space-x-2">
        <%= form.time_field :warm_milk_finish_time, class: makesheet_small_right_class %>
        <%= form.number_field :warm_milk_finish_titration, placeholder: "temp", step: :any, class: makesheet_small_right_class %>
      </div>

      <% if makesheet.make_type == "Red" %>
        <div class="col-span-2 self-center">
          <%= form.label :annatto_in_time, "Annatto In", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 flex items-center space-x-2">
          <%= form.time_field :annatto_in_time, class: makesheet_small_right_class %>
          <%= form.number_field :annatto_in_temp, placeholder: "temp", step: :any, class: makesheet_small_right_class %>
        </div>
      <% end %>

      <div class="col-span-2 self-center">
        <%= form.label :starter_in_time, "Starter IN", class: label_class %>
      </div>
      <div class="col-span-2 md:col-span-1 flex items-center space-x-2">
        <%= form.time_field :starter_in_time, class: makesheet_small_right_class %>
        <%= form.number_field :starter_in_temp, placeholder: "temp", step: :any, class: makesheet_small_right_class %>
      </div>

      <% if makesheet.make_type == "Red" %>
        <div class="col-span-2 self-center">
          <%= form.label :md_88_in_time, "MD88 IN", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 flex items-center space-x-2">
          <%= form.time_field :md_88_in_time, class: makesheet_small_right_class %>
          <%= form.number_field :md_88_in_temp, placeholder: "temp", step: :any, class: makesheet_small_right_class %>
        </div>
      <% end %>

      <div class="col-span-2 self-center">
        <%= form.label :heat_off_1_time, "Heat OFF", class: label_class %>
      </div>
      <div class="col-span-2 md:col-span-1 flex items-center space-x-2">
        <%= form.time_field :heat_off_1_time, class: makesheet_small_right_class %>
        <%= form.number_field :heat_off_1_temp, placeholder: "temp", step: :any, class: makesheet_small_right_class %>
      </div>

      <div class="col-span-2 self-center">
        <%= form.label :rennet_time, "Rennet", class: label_class %>
      </div>
      <div class="col-span-2 md:col-span-1 flex items-center space-x-2">
        <%= form.time_field :rennet_time, class: makesheet_small_right_class %>
        <%= form.number_field :rennet_temp, placeholder: "temp", step: :any, class: makesheet_small_right_class %>
      </div>


    <div class="col-span-4"><hr></div>

        <div class="col-span-2 self-center">
          <%= form.label :cut_start_time, "Cut", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 flex items-center space-x-2">
          <%= form.time_field :cut_start_time, placeholder: "start", class: makesheet_small_right_class %>
          <%= form.time_field :cut_end_time, placeholder: "end", class: makesheet_small_right_class %>
        </div>

        <div class="col-span-2 self-center">
          <%= form.label :heat_on_time, "Heat ON", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 text-left">
          <%= form.time_field :heat_on_time, class: makesheet_small_right_class %>
        </div>

        <div class="col-span-2 self-center">
          <%= form.label :heat_off_2_time, "Heat OFF", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 flex items-center space-x-2">
          <%= form.time_field :heat_off_2_time, class: makesheet_small_right_class %>
          <%= form.number_field :heat_off_2_temp, placeholder: "temp", step: :any, class: makesheet_small_right_class %>
        </div>

        <div class="col-span-2 self-center">
          <%= form.label :pitch_time, "Pitch", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 text-left">
          <%= form.time_field :pitch_time, class: makesheet_small_right_class %>
        </div>

        <div class="col-span-2 self-center">
          <%= form.label :whey_time, "Whey", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 flex items-center space-x-2">
          <%= form.time_field :whey_time, class: makesheet_small_right_class %>
        </div>

        <div class="col-span-2 self-center">
          <%= form.label :first_cut_time, "1st Cut", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 flex items-center space-x-2">
          <%= form.time_field :first_cut_time, class: makesheet_small_right_class %>
          <%= form.number_field :first_cut_titration, step: :any, class: makesheet_small_right_class %>
        </div>

        <div class="col-span-2 self-center">
          <%= form.label :second_cut_time, "2nd Cut", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 flex items-center space-x-2">
          <%= form.time_field :second_cut_time, class: makesheet_small_right_class %>
          <%= form.number_field :second_cut_titration, step: :any, class: makesheet_small_right_class %>
        </div>

        <div class="col-span-2 self-center">
          <%= form.label :third_cut_time, "3rd Cut", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 flex items-center space-x-2">
          <%= form.time_field :third_cut_time, class: makesheet_small_right_class %>
          <%= form.number_field :third_cut_titration, step: :any, class: makesheet_small_right_class %>
        </div>

        <div class="col-span-2 self-center">
          <%= form.label :fourth_cut_time, "4th Cut", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 flex items-center space-x-2">
          <%= form.time_field :fourth_cut_time, class: makesheet_small_right_class %>
          <%= form.number_field :fourth_cut_titration, step: :any, class: makesheet_small_right_class %>
        </div>

        <div class="col-span-2 self-center">
          <%= form.label :fifth_cut_time, "5th Cut", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 flex items-center space-x-2">
          <%= form.time_field :fifth_cut_time, class: makesheet_small_right_class %>
          <%= form.number_field :fifth_cut_titration, step: :any, class: makesheet_small_right_class %>
        </div>

        <div class="col-span-2 self-center">
          <%= form.label :sixth_cut_time, "6th Cut", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 flex items-center space-x-2">
          <%= form.time_field :sixth_cut_time, class: makesheet_small_right_class %>
          <%= form.number_field :sixth_cut_titration, step: :any, class: makesheet_small_right_class %>
        </div>

       <div class="col-span-2 self-center">
          <%= form.label :seventh_cut_time, "7th Cut", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 flex items-center space-x-2">
          <%= form.time_field :seventh_cut_time, class: makesheet_small_right_class %>
          <%= form.number_field :seventh_cut_titration, step: :any, class: makesheet_small_right_class %>
        </div>

        <!-- Identify Mill -->
        <div class="col-span-2 self-center">
          <%= form.label :identify_mill_used, "Identify Mill Used", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 text-left">
          <%= form.select :identify_mill_used, options_for_select(makesheet_mill, selected: makesheet.identify_mill_used), { prompt: true }, class: makesheet_med_class %>
        </div>

        <!-- Unusual Smell -->
        <div class="col-span-2 self-center">
          <%= form.label :unusual_smell_appearance, class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1 text-left">
          <%= form.text_area :unusual_smell_appearance, rows: 4, class: makesheet_med_class %>
        </div>


    <!-- Process Info Section -->
        <div class="col-span-4 mt-8"><hr></div>
        <div id="process-info-section" class="scroll-mt-[120px] col-span-4 text-left font-semibold text-lg">
          PROCESS INFORMATION
        </div>
        <div class="col-span-4"><hr></div>
       

        <div class="col-span-2 self-center">
          <label for="makesheet_ta_combined_milk" class="<%= label_class %>">
            <span class="text-gray-800">TA COMBINED AM/PM MILK</span><br>
            <span class="text-gray-600 font-light">– prior to starter addition</span>
          </label>
        </div>
        <div class="col-span-2 md:col-span-1 text-left">
          <%= form.number_field :ta_combined_milk, step: 0.01, class: makesheet_small_right_class %>
        </div>

        <div class="col-span-2 self-center">
          <label for="makesheet_whey_ta" class="<%= label_class %>">
            <div class="text-gray-800">WHEY TA</div>
            <div class="text-gray-600 font-light">approx 9.15am</div>
          </label>
        </div>
        <div class="col-span-2 md:col-span-1 text-left">
          <%= form.number_field :whey_ta, step: 0.01, class: makesheet_small_right_class %>
        </div>

        <div class="col-span-2 self-center">
          <label for="makesheet_curd_temp" class="<%= label_class %>">
            <div class="text-gray-800">CURD TEMP (°C)</div>
            <div class="text-gray-600 font-light">post milling</div>
          </label>
        </div>
        <div class="col-span-2 md:col-span-1 text-left">
          <%= form.number_field :curd_temp, step: 0.1, class: makesheet_small_right_class %>
        </div>

        <div class="col-span-2 self-center">
          <label for="makesheet_room_temp" class="<%= label_class %>">
            <div class="text-gray-800">ROOM TEMP (°C)</div>
            <div class="text-gray-600 font-light">taken when curd temp taken</div>
          </label>
        </div>
        <div class="col-span-2 md:col-span-1  text-left">
          <%= form.number_field :room_temp, step: 0.1, class: makesheet_small_right_class %>
        </div>

        <div class="col-span-2 self-center">
          <label for="makesheet_visual_moisture_post_milling" class="<%= label_class %>">
            <div class="text-gray-800">VISUAL MOISTURE (Post Milling)</div>
            <div class="text-gray-600 font-light">Score 1 = Dry, 10 = Wet</div>
          </label>
        </div>
        <div class="col-span-2 md:col-span-1  text-left">
          <%= form.select :visual_moisture_post_milling,
                options_for_select((1..10).map { |n| [n, n] }, selected: @makesheet.visual_moisture_post_milling),
                { include_blank: "Select" },
                class: makesheet_small_left_class %>
        </div>

        <div class="col-span-2 self-center">
          <label for="makesheet_moisture_percentage_post_milling" class="<%= label_class %>">
            <div class="text-gray-800">MOISTURE %</div>
            <div class="text-gray-600 font-light">AM of knocking out</div>
          </label>
        </div>
        <div class="col-span-2 md:col-span-1 text-left">
          <%= form.number_field :moisture_percentage_post_milling, step: 0.01, class: makesheet_small_right_class %>
        </div>

        <div class="col-span-2 self-center">
          <%= form.label :record_of_works_completed, "Record of Engineering or Maintenance Work Completed", class: label_class %>
        </div>
        <div class="col-span-2 md:col-span-1">
          <%= form.text_area :record_of_works_completed, rows: 5, class: makesheet_full_class %>
        </div>
    <!-- End of Process Info Section -->



   <!-- POST MAKE Section -->
    <div class="col-span-4 mt-8"><hr></div>
    <div id="post-make-section" class="scroll-mt-[120px] col-span-4 text-left font-semibold text-lg">
      POST MAKE
    </div>
    <div class="col-span-4"><hr></div>
   

    <div class="col-span-2 self-center">
      <%= form.label :total_weight, "Weight (kgs)", class: label_class %>
    </div>
    <div class="col-span-2 md:col-span-1 text-left">
      <%= form.number_field :total_weight, step: :any, placeholder: "kgs", class: makesheet_small_right_class %>
    </div>

    <div class="col-span-2 self-center">
      <%= form.label :yield, "Calculated Yield %", class: label_class %>
    </div>
    <div class="col-span-2 md:col-span-1 text-left">
      <%= form.number_field :calc_yield,
            value: number_with_precision(@makesheet.yield, precision: 2),
