<!-- app/views/shared/_picksheet_pdf_modal.html.erb  -->
<div class="hidden fixed inset-0 z-[1000] items-center justify-center p-4"
     data-dialog-target="backdrop"
     data-action="keydown->dialog#keydown"
     aria-modal="true" role="dialog" aria-label="Picksheet summary preview">

  <!-- Backdrop -->
  <div class="absolute inset-0 bg-black/50 z-[1000]" data-action="click->dialog#close"></div>

  <!-- Panel -->
  <div class="relative z-[1010] bg-white rounded-2xl shadow-xl w-full max-w-5xl h-[80vh] overflow-hidden"
       onclick="event.stopPropagation()">
    <button type="button"
            class="absolute top-3 right-3 px-3 py-1 rounded bg-gray-200 hover:bg-gray-300"
            data-action="dialog#close">Close</button>

    <!-- ✅ Turbo Frame (no header duplication) -->
    <turbo-frame id="picksheet_summary_frame"
                 class="w-full h-full block overflow-auto"
                 data-dialog-target="frame"
                 data-src="">
      <div class="p-4 text-sm text-gray-500">Loading…</div>
    </turbo-frame>
  </div>
</div>
