<% content_for(:page_title, "Sign In") %>

<div class="mx-auto md:w-1/3 w-full pt-12 flex justify-center">
  <div class="border border-gray-400 rounded-lg p-8 text-right">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field my-6">
        <%= f.label :email, class: label_class %><br>
        <%= f.email_field :email, autocomplete: "email", class: field_class %>
      </div>

      <div class="field mb-2">
        <%= f.label :password, class: label_class %><br>
        <%= f.password_field :password, autocomplete: "current-password", class: field_class %>
      </div>

      <div class="text-sm mb-4 text-left">
        <%= link_to "Forgot your password?", new_user_password_path, class: "text-amber-500 hover:underline" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mt-4 text-right">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mt-6">
        <%= f.submit "Sign in", class: fill_button_class %>
      </div>

    <% end %>
  </div>
</div>
