<% content_for(:page_title, "Sign up")%>
<div class="mx-auto md:w-1/3 w-full pt-12 flex justify-center">

  <br><br><br>
  <div class="border border-gray-400 rounded-lg p-8 text-right">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :username, class: label_class %>
      <%= f.text_field :username, class: field_class %>
    </div>
    <br>
    <div class="field">
      <%= f.label :password, class: label_class %>

      <%= f.password_field :password, autocomplete: "new-password", class: field_class %>
      <br> <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: label_class %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: field_class %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: fill_button_class %>
    </div>

    <% end %>

  </div>