<% content_for(:page_title, "Sign up")%>
<div class="mx-auto md:w-1/3 w-full pt-12 flex justify-center">

  <br><br>
  <div class="border border-gray-400 rounded-lg p-8 text-left">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field my-6">
      <%= f.label :first_name, class: label_class %><br>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name", class: field_class  %>
    </div>

    <div class="field my-6">
      <%= f.label :last_name, class: label_class %><br>
      <%= f.text_field :last_name, autocomplete: "family-name", class: field_class  %>
    </div>

    <div class="field my-6">
      <%= f.label :email, class: label_class %><br>
      <%= f.email_field :email, autocomplete: "email", class: field_class  %>
    </div>

    <div class="field my-6">
      <%= f.label :password, class: label_class %><br>
      <%= f.password_field :password, autocomplete: "new-password", class: field_class, placeholder: (@minimum_password_length ? "#{@minimum_password_length} characters minimum" : "") %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: label_class %><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: field_class %>
    </div>

    <div class="actions text-right">
      <%= f.submit "Sign up", class: fill_button_class %>
    </div>

    <% end %>

  </div>