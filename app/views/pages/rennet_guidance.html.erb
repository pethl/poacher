<% content_for(:title, "Poacher: Rennet Guidance") %>
<% content_for(:page_title, "RENNET GUIDANCE ") %>

<div class="w-full md:max-w-2xl md:mx-auto">
  <div class="rounded-2xl shadow ring-1 ring-gray-200 overflow-hidden">
    <table class="pt-4 min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Milk volume (L)</th>
          <th scope="col" class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Rennet</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100 bg-white">
        <% @rows.each do |row| %>
          <tr>
            <td class="px-4 py-3 text-sm text-gray-900"><%= row.description %></td>
            <td class="px-4 py-3 text-sm text-gray-900"><%= row.value %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Optional helper hint row -->
  <p class="mt-3 text-xs text-gray-500">
    Values shown are looked up by rounding the entered milk volume to the nearest hundred (half-up).
  </p>
</div>
