<div class="max-w-6xl mx-auto mt-4 bg-white p-4 border rounded-lg shadow-sm">
  <div class="grid grid-cols-4 gap-x-6 gap-y-4 items-center text-sm text-gray-800">

    <!-- Row 1 -->
    <label class="text-right font-semibold text-gray-700">Business Name</label>
    <div><%= contact.business_name %></div>
    <label class="text-right font-semibold text-gray-700">Contact Name</label>
    <div><%= contact.contact_name %></div>

    <!-- Row 2 -->
    <label class="text-right font-semibold text-gray-700">Reference</label>
    <div><%= contact.reference %></div>
    <label class="text-right font-semibold text-gray-700">Email</label>
    <div><%= contact.email %></div>

    <!-- Row 3 -->
    <label class="text-right font-semibold text-gray-700">Mobile</label>
    <div><%= contact.mobile %></div>
    <label class="text-right font-semibold text-gray-700">Phone</label>
    <div><%= contact.phone %></div>

    <!-- Row 4 -->
    <label class="text-right font-semibold text-gray-700">Country</label>
    <div><%= contact.country %></div>
    <label class="text-right font-semibold text-gray-700">Address</label>
    <div><%= contact.address %></div>

    <!-- Row 5 -->
    <label class="text-right font-semibold text-gray-700">Pre Payment?</label>
    <div><%= contact.pre_payment? ? "Yes" : "No" %></div>
    <label class="text-right font-semibold text-gray-700">Payment on Receipt?</label>
    <div><%= contact.payment_on_receipt? ? "Yes" : "No" %></div>

    <!-- Row 6 -->
    <label class="text-right font-semibold text-gray-700">Days After Invoice</label>
    <div><%= contact.days_after_invoice %></div>
    <label class="text-right font-semibold text-gray-700">Sage Delivery Note</label>
    <div><%= contact.sage_delivery_note? ? "Yes" : "No" %></div>

    <!-- Row 7 - Terms and Notes -->
    <label class="text-right font-semibold text-gray-700 col-span-1">Ts & Cs</label>
    <div class="col-span-3 whitespace-pre-line"><%= contact.terms_and_conditions %></div>

    <label class="text-right font-semibold text-gray-700 col-span-1">Notes</label>
    <div class="col-span-3 whitespace-pre-line"><%= contact.notes %></div>

  </div>
</div>
