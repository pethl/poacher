<div class="overscroll-none">
<% content_for :title, "Poacher: Customer List" %>
<% content_for(:page_title, "CUSTOMERS")%>
<% content_for(:page_button, "contacts/new")%>
<div id="contacts">

<div class="w-full"> 
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
    </div>

<div class="items-center rounded text-sm">
<%= turbo_refreshes_with method: :morph, scroll: :preserve %>

<div class="sticky top-0 font-normal text-left text-sm m-2">
  <i class="fa-solid fa-circle-info"></i> Click any underlined column header to sort table<br>
</div>

<div class="flex flex-col h-screen">
    <div class="flex-grow overflow-auto">
      <table class="relative w-full border text-sm text-left text-gray-600  ">
       <thead class="text-xs text-gray-700 uppercase bg-gray-200 ">
        <tr class="bg-gray-200 sticky top-0">
                <th scope="col" class="sticky top-0 px-4 py-2   underline underline-offset-2">
                   <%= contacts_show_sort_indicator_for("business_name") %>
                   <%= contacts_sort_link(column: "business_name", label: "Business Name") %>
                </th>
                <th id="batch" class="sticky top-0 px-4 py-2 w-50 text-left underline underline-offset-2">
                   <%= contacts_show_sort_indicator_for("contact_name") %>
                   <%= contacts_sort_link(column: "contact_name", label: "Contact Name") %>
                </th>
                <th scope="col" class="sticky top-0 px-4 py-2 text-left">
                     <%= contacts_show_sort_indicator_for("email") %>
                     <%= contacts_sort_link(column: "email", label: "Email") %>
                </th>
                <th scope="col" class="sticky top-0 px-4 py-2 text-left w-20 whitespace-nowrap underline underline-offset-2">
                    <%= contacts_show_sort_indicator_for("mobile") %>
                     <%= contacts_sort_link(column: "mobile", label: "Mobile") %>
                </th>
                <th scope="col" class="sticky top-0 px-4 py-2 text-left underline underline-offset-2">
                      <%= contacts_show_sort_indicator_for("phone") %>
                     <%= contacts_sort_link(column: "phone", label: "Other Phone") %>
                </th>
                <th scope="col" class="sticky top-0 px-4 py-2 text-left">
                Country
                </th>
                <th scope="col" class="sticky top-0 px-4 py-2 text-left">
                   Address
                </th>
                <th scope="col" class="sticky top-0 px-4 py-2 text-left">
                    Ref
                </th>
                <th scope="col" class="sticky top-0 px-4 py-2 text-left">
                    Payment Terms
                </th>
                <th scope="col" class="sticky top-0 px-4 py-2  text-center">
                    Sage Del Note?
                </th>
                <th scope="col" class="sticky top-0 px-4 py-2 text-left w-48">
                    Ts & Cs
                </th>
                <th scope="col" class="sticky top-0 px-4 py-2 text-left w-48">
                    Notes
                </th>
                
            </tr>
        </thead>
        <tbody class="overflow-contain">
      <% @contacts.each do |contact| %>
            <tr class="border-b  hover:bg-gray-100">
                <td scope="row" class="px-4 py-2 whitespace-nowrap underline underline-offset-2">
                   <%= link_to contact.business_name, contact %>
                </td>
                <td class="px-4 py-3 text-left underline underline-offset-2">
                  <%=  contact.contact_name %>
                </td>
                <td class="px-4 py-3 text-left whitespace-nowrap">
                  <%= contact.email %>
                </td>
                <td class="px-4 py-3 text-left">
                  <%=  contact.mobile %>
                </td>
                <td class="px-4 py-3 text-left">
                  <%=  contact.phone %>
                </td>
                <td class="px-4 py-3 text-left">
                  <%=  contact.country %>
                </td>
                <td class="px-4 py-3 text-left">
                  <%=  contact.address %>
                </td>
                <td class="px-4 py-3  text-left truncate">
                   <%=  contact.reference %>
                </td>
                 <td class="px-4 py-3  text-left truncate">
                   <%=  contact.payment_terms %>
                </td>
                 <td class="px-4 py-3  text-center">
                   <%=  contact.sage_delivery_note? ? "SAGE" : "" %>
                </td>
                <td class="px-4 py-3  text-left w-48 truncate">
                  <%=  contact.terms_and_conditions %>
                </td>
                <td class="px-4 py-3  text-left w-48 truncate">
                  <%=  contact.notes %>
                </td>
                
            </tr>
              <% end %>
        </tbody>
    </table>
</div>
  
  </div>
</div>
