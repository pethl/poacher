<div class="max-w-xl mx-auto mt-4 bg-white p-4">
  <%= form_with(model: picksheet, local: true) do |form| %>

    <%= form_errors_for(picksheet) %>

    <div class="grid grid-cols-2 gap-x-5 gap-y-3 items-center">

      <!-- Status -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :status %>
      </label>
      <div class="text-left">
        <%= form.select :status, options_for_select(pick_status, picksheet.status), { prompt: true }, class: field_class_flex_med %>
      </div>

      <!-- Date Order Placed -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :date_order_placed %>
      </label>
      <div class="text-left">
        <%= form.date_field :date_order_placed, value: Time.now.strftime('%Y-%m-%d'), class: field_class_flex_med %>
      </div>

      <!-- Customer -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :contact_id, "Customer*" %>
      </label>
      <div class="text-left">
        <%= form.collection_select :contact_id, @contacts, :id, :business_name, { prompt: true }, class: field_class_flex %>
      </div>

      <!-- Customer Telephone -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :contact_telephone_number, "Customer Telephone" %>
      </label>
      <div class="text-left">
        <%= form.telephone_field :contact_telephone_number, class: field_class_flex %>
      </div>

      <!-- Delivery Required By -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :delivery_required_by %>
      </label>
      <div class="text-left">
        <%= form.date_field :delivery_required_by, class: field_class_flex_med %>
      </div>

      <!-- Delivery Time of Day -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :delivery_time_of_day, "Delivery Time of Day" %>
      </label>
      <div class="text-left flex items-center gap-4">
        <%= form.radio_button :delivery_time_of_day, 'AM' %> AM
        <%= form.radio_button :delivery_time_of_day, 'PM' %> PM
      </div>

      <!-- Carrier -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :carrier %>
      </label>
      <div class="text-left">
        <%= form.select :carrier, options_for_select(carrier, picksheet.carrier), { prompt: true }, class: field_class_flex %>
      </div>

      <!-- Carrier Delivery Date -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :carrier_delivery_date %>
      </label>
      <div class="text-left">
        <%= form.date_field :carrier_delivery_date, class: field_class_flex %>
      </div>

      <!-- Number of Boxes -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :number_of_boxes %>
      </label>
      <div class="text-left">
        <%= form.number_field :number_of_boxes, class: field_class_flex_small %>
      </div>

      <!-- Carrier/Customer Collection Notes -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :carrier_collection_notes, "Carrier or Customer Collection Notes" %>
      </label>
      <div class="text-left">
        <%= form.text_area :carrier_collection_notes, rows: 3, class: field_class_flex %>
      </div>

      <!-- Hidden User ID -->
      <%= form.hidden_field :user_id, value: current_user.id %>

      <!-- Back to Index -->
      <div class="text-left mt-2">
        <%= link_to "← Back to Picking Sheets", picksheets_path, class: clear_button_class %>
      </div>

      <!-- Submit -->
      <div class="text-left mt-2">
        <%= form.submit "Create Picking Sheet", class: fill_button_class %>
      </div>

    </div>
  <% end %>
</div>
