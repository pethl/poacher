<% content_for(:page_title, "DAILY CHEESE MANIFEST")%>
<% content_for :print_button,
   print_manifest_pdf_picksheets_path(format: :pdf, status: @status.to_s.capitalize) %>

<div id="picksheets">
  <%= render 'navigation' %>

  <div class="mx-auto w-3/4 mt-4 mb-2">
  <div class="flex items-center justify-between gap-3">

    <!-- Left: Status pills -->
    <div class="inline-flex rounded-full bg-gray-100 p-1">
      <% pill = ->(label, value) do
           active  = (@status == value)
           classes = ["px-4 py-1.5 rounded-full text-sm font-medium",
                      (active ? "bg-white shadow text-gray-900" : "text-gray-600 hover:text-gray-900")].join(" ")
      %>
        <%= link_to label, daily_cheese_manifest_picksheets_path(status: value), class: classes %>
      <% end %>

      <%= pill.call("Hold (Outstanding)", "Hold") %>
      <%= pill.call("Assigned (Coming)",  "Assigned") %>
      <%= pill.call("Cutting (Today)",    "Cutting") %>
    </div>

    <!-- Right: Print buttons (always visible) -->
    <div class="inline-flex items-center gap-2">
      <%= link_to print_manifest_pdf_picksheets_path(format: :pdf, status: "Hold"),
                  target: "_blank",
                  data: { turbo: false },
                  class: "inline-flex items-center gap-1 rounded-full px-3 py-1 text-xs font-medium
                          bg-amber-100 text-amber-800 hover:bg-amber-200" do %>
        <i class="fa-solid fa-print"></i><span>Print Hold</span>
      <% end %>

      <%= link_to print_manifest_pdf_picksheets_path(format: :pdf, status: "Assigned"),
                  target: "_blank",
                  data: { turbo: false },
                  class: "inline-flex items-center gap-1 rounded-full px-3 py-1 text-xs font-medium
                          bg-sky-100 text-sky-800 hover:bg-sky-200" do %>
        <i class="fa-solid fa-print"></i><span>Print Assigned</span>
      <% end %>

      <%= link_to print_manifest_pdf_picksheets_path(format: :pdf, status: "Cutting"),
                  target: "_blank",
                  data: { turbo: false },
                  class: "inline-flex items-center gap-1 rounded-full px-3 py-1 text-xs font-medium
                          bg-emerald-100 text-emerald-800 hover:bg-emerald-200" do %>
        <i class="fa-solid fa-print"></i><span>Print Cutting</span>
      <% end %>
    </div>

  </div>
</div>

  <!-- Table Product Size -->

  <!-- Table Container -->
  <div class="mx-auto w-3/4 ">
  <br class="mt-20">
   <p class="text-2xl font-bold text-gray-500 mb-2">Size / Count  Per Product</p>

   <!-- Simple Table with Sticky Header and Vertical Scrolling -->
    <div class="relative overflow-x-auto">
    <table class="w-full table-auto text-left border border-gray-200">
      <!-- Table Header (Sticky at the top) removed for design reasons-->
      <thead class="sticky top-0 bg-gray-200 text-xs text-gray-700 uppercase">
      </thead> 

          <!-- Table Body with Scrolling -->
          <tbody class="overflow-y-auto" style="max-height: calc(24rem);">
            <% @final_grouped_items.each do |product, items| %>
              <!-- Product Row -->
              <tr class="bg-white border-b hover:bg-gray-100">
                <td class="px-2 py-1 pl-4 border-r-2 pt-4 font-semibold text-lg text-left w-24" colspan="5">
                  <%= product.upcase %>
                </td>
              </tr>

              <!-- Size and Wedge Size Rows -->
              <% items.each do |item| %>
              
                <tr class="bg-white border-b hover:bg-gray-100">
                  <td class="px-3 py-2 pl-8 border-r-2 underline underline-offset-2 w-32">
                    <%= item[:size] %>
                  </td>
                  <td class="px-2 py-2 border-r-2 w-32">
                    <%= item[:wedge_size] %>
                  </td>
                  <td class="px-2 py-2 border-r-2 text-center w-24">
                    <%= item[:count] %>
                  </td>
                  <td class="px-2 py-2 border-r-2 w-64">
                    <!-- Action buttons or links go here -->
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>


  <div class="mx-auto w-3/4 mt-8">
   <br class="mt-12">
   <p class="text-2xl font-bold text-gray-500 mb-2">Customers Per Product</p>
    <table class="w-full table-auto text-left border border-gray-200 p-8">
    <thead>
        <tr class="bg-white ">
          <% @product_names.each do |product| %>
            <th class="pl-2 py-2 font-semibold text-lg text-left border-b border-r"><%= product.upcase %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% max_rows = @product_names.map { |p| @product_to_business_names[p].size }.max %>
        <% (0...max_rows).each do |i| %>
          <tr class="bg-white border-b hover:bg-gray-100">
              
            <% @product_names.each do |product| %>
              <td class=" py-2 pl-4 border-r-2  w-32">
                <%= @product_to_business_names[product][i] %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>







