<div class="max-w-xl mx-auto mt-4 bg-white p-4">
  <%= form_for [traceability_record, waste_record] do |form| %>

    <% if waste_record.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mb-4">
        <h2><%= pluralize(waste_record.errors.count, "error") %> prohibited this waste record from being saved:</h2>
        <ul class="mt-2 list-disc list-inside text-sm">
          <% waste_record.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid grid-cols-2 gap-x-5 gap-y-3 items-center">

      <!-- Waste Date -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :waste_date %>
      </label>
      <div class="text-left">
        <%= form.date_field :waste_date, value: Time.zone.today, class: field_class_flex_med %>
      </div>

      <!-- Wedges -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :wedges %>
      </label>
      <div class="text-left">
        <%= form.number_field :wedges, step: :any, placeholder: "0.00", class: field_class_flex_small %>
      </div>

      <!-- Cooking -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :cooking %>
      </label>
      <div class="text-left">
        <%= form.number_field :cooking, step: :any, placeholder: "0.00", class: field_class_flex_small %>
      </div>

      <!-- Blue -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :blue %>
      </label>
      <div class="text-left">
        <%= form.number_field :blue, step: :any, placeholder: "0.00", class: field_class_flex_small %>
      </div>

      <!-- T's and B's -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :t_and_bs, "T's and B's" %>
      </label>
      <div class="text-left">
        <%= form.number_field :t_and_bs, step: :any, placeholder: "0.00", class: field_class_flex_small %>
      </div>

      <!-- Waste -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :waste %>
      </label>
      <div class="text-left">
        <%= form.number_field :waste, step: :any, placeholder: "0.00", class: field_class_flex_small %>
      </div>

      <!-- Back Button -->
      <div class="text-left mt-2">
        <%= link_to "â† Back ", traceability_record_path(traceability_record), class: gray_button %>
      </div>

      <!-- Submit Button -->
      <div class="text-left mt-2">
        <%= form.submit "Save Waste Record", class: fill_button_class %>
      </div>

    </div>
  <% end %>
</div>
