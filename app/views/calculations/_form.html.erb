<% content_for(:page_title, "NEW MAKE SHEET") %>

<div class="max-w-xl mx-auto mt-4 bg-white p-4">
  <%= form_with model: @makesheet, url: makesheets_path, local: true do |form| %>

    <%= form_errors_for(@makesheet) %>

    <div class="grid grid-cols-2 gap-x-5 gap-y-3 items-center">

      <!-- Status -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :status %>
      </label>
      <div class="text-left">
        <%= form.select :status,
                        options_for_select(batch_status, selected: @makesheet.status),
                        { prompt: true },
                        class: field_class_flex_disabled,
                        disabled: true %>
      </div>

      <!-- Make Type -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :make_type %>
      </label>
      <div class="text-left">
        <%= form.select :make_type,
                        options_for_select(make_type, selected: @makesheet.make_type),
                        { prompt: true },
                        class: field_class_flex %>
      </div>

      <!-- Weight Type -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :weight_type %>
      </label>
      <div class="text-left">
        <%= form.select :weight_type,
                        options_for_select(weight_type, selected: @makesheet.weight_type),
                        { prompt: true },
                        class: field_class_flex %>
      </div>

      <!-- Make Date -->
      <label class="text-right font-semibold text-gray-700">
        <%= form.label :make_date %>
      </label>
      <div class="text-left">
        <%= form.date_field :make_date, value: @makesheet.make_date, class: field_class_flex %>
      </div>

      <!-- Back Link -->
      <div class="text-left">
        <%= link_to "← Back to Makesheets", makesheets_path, class: gray_button %>
      </div>

      <!-- Submit Button -->
      <div class="text-left">
        <%= form.submit "Create Makesheet", class: fill_button_class %>
      </div>

    </div>
  <% end %>
</div>

