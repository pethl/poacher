<% content_for :title, "Poacher: Calculations" %>
<% content_for :page_title, "CALCULATION" %>

<div class="mx-auto md:w-1/3 text-center">
  <% if @calculation&.errors&.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mb-4 text-left">
      <h2 class="font-semibold mb-2"><%= pluralize(@calculation.errors.count, "error") %> prohibited this record from being saved:</h2>
      <ul class="list-disc list-inside text-sm">
        <% @calculation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= render @calculation %>

  <div class="mt-4 space-x-2">
    <%= link_to "Edit this calculation", edit_calculation_path(@calculation), class: fill_button_class %>
    <%= link_to "Back to calculations", calculations_path, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= button_to "Destroy this calculation", @calculation, method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium inline-block" %>
  </div>
</div>
